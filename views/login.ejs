                        <!--<label>-->
                            <!--<input type="checkbox" name="remember"> Remember me-->
                        <!--</label>-->
                    <!--</div>-->
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                        <button class="btn btn-default" type="button" data-dismiss="modal" onclick='onCancelClick()'>Cancel</button>
                        <button class="btn btn-primary" type="submit">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>